# .editorconfig

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false  # Allow trailing spaces for line breaks in Markdown

[*.json]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.html]
indent_size = 2
